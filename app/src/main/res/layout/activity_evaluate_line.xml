<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.usp.ime.bandex.EvaluateLineActivity"
    android:id="@+id/ll_eval">
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rg_radios"
    android:layout_centerHorizontal="true" >
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_central"
        android:id="@+id/activity_evaluate_line_rb_central"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:onClick="onRadioButtonClicked"
         />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_quimica"
        android:id="@+id/activity_evaluate_line_rb_quimica"
        android:checked="false"
        android:layout_below="@+id/activity_evaluate_line_rb_central"
        android:layout_alignLeft="@+id/activity_evaluate_line_rb_central"
        android:layout_alignStart="@+id/activity_evaluate_line_rb_central"
        android:onClick="onRadioButtonClicked"
         />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_fisica"
        android:id="@+id/activity_evaluate_line_rb_fisica"
        android:checked="false"
        android:layout_below="@+id/activity_evaluate_line_rb_quimica"
        android:layout_alignLeft="@+id/activity_evaluate_line_rb_quimica"
        android:layout_alignStart="@+id/activity_evaluate_line_rb_quimica"
        android:onClick="onRadioButtonClicked"
        />
    </RadioGroup>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/rg_radios"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:stepSize="1.0"
        />

    <TextView <!-- Teste -->
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Dê uma nota para a fila"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Escolha um Bandejão"
        android:textSize="20sp"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/activity_evaluate_line_btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/title_send"
        bootstrap:bb_size="large"
        bootstrap:bb_icon_right="fa-check-circle"
        bootstrap:bb_type="primary"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

</RelativeLayout>
