<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.usp.ime.bandex.EvaluateLineActivity"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="br.usp.ime.bandex.PreferencesActivity"
        android:id="@+id/ll_pref"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/fundo_site_usp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_notifications"
            android:text="Notificações sobre fechamento"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_radios_notifications"
            android:gravity="top">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ativar"
                android:id="@+id/activity_preferences_notifications_activate"
                android:checked="false"
                android:onClick="onRadioButtonClicked"
            />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desativar"
                android:id="@+id/activity_preferences_notifications_deactivate"
                android:checked="false"
                android:onClick="onRadioButtonClicked"
            />
        </RadioGroup>

        <Button
            android:text="Salvar"
            android:id="@+id/activity_preferences_btn_save"
            android:background="@drawable/botao"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            >
        </Button>

    </LinearLayout>
</ScrollView>