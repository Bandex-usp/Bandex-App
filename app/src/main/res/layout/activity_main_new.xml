<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1_fisica"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
 
    <TableRow
        android:id="@+id/tableRow1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >
		
		<TextView
            android:id="@+id/textView1"
            android:text="Column 1"
            android:textAppearance="?android:attr/textAppearanceLarge" />
	</TableRow>
	
    <TableRow
        android:id="@+id/tableRow2_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >
		
		<TextView
            android:id="@+id/textView1"
            android:text="Column 1"
			android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge" />
	</TableRow>

    <TableRow
        android:id="@+id/tableRow3}_info2+btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >
		
		<TextView
            android:id="@+id/textView1_info2"
            android:text="Column 1"
            android:textAppearance="?android:attr/textAppearanceLarge" />
		<TextView
			android:id="@+id/textView1_btn"
			android:text="Column 1"
			android:textAppearance="?android:attr/textAppearanceLarge" />
	</TableRow>
	
    <TableRow
        android:id="@+id/tableRow4_info3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >
		
		<TextView
            android:id="@+id/textView1"
            android:text="Column 1"
            android:textAppearance="?android:attr/textAppearanceLarge" />
	</TableRow>
	
</TableLayout>
